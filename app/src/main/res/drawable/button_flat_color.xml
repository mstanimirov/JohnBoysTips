<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <corners
                android:radius="300dp" />
            <solid
                android:color="#40aaaaaa" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

        </shape>
    </item>


    <item>
        <shape>

            <corners
                android:radius="300dp" />
            <solid
                android:color="@android:color/transparent" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

        </shape>
    </item>

</selector>
